    <groupId>cachedobject</groupId>
    <artifactId>cachedobject</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>jar</packaging>

    <name>cachedobject</name>
    <url>https://github.com/rsimoni/cachedobject</url>

