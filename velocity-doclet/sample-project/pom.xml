<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.github.rsimoni.velocitydoclet</groupId>
    <artifactId>sample-project</artifactId>
    <version>0.1-SNAPSHOT</version>
    <packaging>jar</packaging>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <java.version>1.6</java.version>

        <spring.version>3.2.1.RELEASE</spring.version>
    </properties>

    <dependencies>

        <dependency>
            <groupId>commons-beanutils</groupId>
            <artifactId>commons-beanutils</artifactId>
            <version>1.8.3</version>
        </dependency>

        <!-- == Database ==================================== -->
        <dependency>
            <groupId>commons-dbcp</groupId>
            <artifactId>commons-dbcp</artifactId>
            <version>1.4</version>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-jdbc</artifactId>
            <version>${spring.version}</version>
        </dependency>

        <!-- == Testing ===================================== -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.11</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.hamcrest</groupId>
            <artifactId>hamcrest-all</artifactId>
            <version>1.3</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.jmock</groupId>
            <artifactId>jmock-junit4</artifactId>
            <version>2.6.0</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.jmock</groupId>
            <artifactId>jmock-legacy</artifactId>
            <version>2.6.0</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>

                    <showDeprecation>true</showDeprecation>
                    <showWarnings>true</showWarnings>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>1.6</version>
                <executions>
                    <execution>
                        <id>add-source</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>${project.build.directory}/generated-source/repositories</source>
                                <source>src/velocity-doclet</source>
                                <source>src/javadoc</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

        </plugins>

    </build>

	<profiles>
        <profile>
            <id>generate-javascript</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-javadoc-plugin</artifactId>
                        <version>2.9.1</version>
                        <configuration>
                            <quiet>true</quiet>
                            <show>private</show>
                            <doclet>velocitydoclet.VelocityDoclet</doclet>
                            <docletArtifacts>
                                <docletArtifact>
                                    <groupId>com.github.rsimoni</groupId>
                                    <artifactId>velocity-doclet</artifactId>
                                    <version>0.1-SNAPSHOT</version>
                                </docletArtifact>
                            </docletArtifacts>
                            <overview>src/javadoc/overview.html</overview>

                            <!-- useStandardDocletOptions=false is required -->
                            <useStandardDocletOptions>false</useStandardDocletOptions>

                            <additionalparam>
                                -d "${project.build.directory}/javascript"
                                -template-overview ""
                                -template-package ""
                                -template-class "${basedir}/src/velocity-doclet/javascript.vm"
                                -output-extension js
                            </additionalparam>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>generate-repositories</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-javadoc-plugin</artifactId>
                        <version>2.9.1</version>
                        <configuration>
                            <quiet>true</quiet>
                            <show>private</show>
                            <doclet>velocitydoclet.VelocityDoclet</doclet>
                            <docletArtifacts>
                                <docletArtifact>
                                    <groupId>com.github.rsimoni</groupId>
                                    <artifactId>velocity-doclet</artifactId>
                                    <version>0.1-SNAPSHOT</version>
                                </docletArtifact>
                            </docletArtifacts>
                            <overview>src/javadoc/overview.html</overview>

                            <!-- useStandardDocletOptions=false is required -->
                            <useStandardDocletOptions>false</useStandardDocletOptions>

                            <additionalparam>
                                -d "${project.build.directory}/generated-source/repositories"
                                -template-overview ""
                                -template-package ""
                                -template-class "${basedir}/src/velocity-doclet/repository.vm"
                                -output-extension java
                            </additionalparam>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
	</profiles>
</project>
